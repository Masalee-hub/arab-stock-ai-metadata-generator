{
  "manifest_version": 3,
  "name": "Arabs Stock AI Keywords - Title + Keywords Generator",
  "version": "0.0.1",
  "description": "AI-powered metadata generator for Arabs Stock contributors. Generate optimized titles and keywords in Arabic and English.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://contributor.arabsstock.com/*",
    "*://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://contributor.arabsstock.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Arabs Stock AI Keywords",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "styles.css"
      ],
      "matches": [
        "*://contributor.arabsstock.com/*"
      ]
    }
  ]
}