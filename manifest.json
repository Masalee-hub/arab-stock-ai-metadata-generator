{
  "manifest_version": 3,
  "name": "Arab Stock AI Keyword - Title + Keyword Generator",
  "version": "0.0.1",
  "description": "AI-powered metadata generator for Arab Stock contributor. Generate optimized titles and keywords in Arabic and English.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://contributor.arabsstock.com/*",
    "*://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*//contributor.arabsstock.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Arabs Stock AI Keywords",
    "default_icon":
  }

}